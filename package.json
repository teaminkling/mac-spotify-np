{
  "name": "spotify-now-playing",
  "version": "0.7.0",
  "description": "A tool for macOS and Spotify to extend functionality of Spotify Desktop.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "copy": "cp -r src/css/ dist/css/ && cp -r src/img dist/img",
    "clean": "rm -rf dist/*",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "build -p always",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/teaminkling/mac-spotify-np.git"
  },
  "author": "teaminkling",
  "license": "MIT",
  "devDependencies": {
    "@types/nconf": "^0.10.0",
    "@types/node-notifier": "^8.0.0",
    "browserify": "^17.0.0",
    "dotenv": "^10.0.0",
    "electron": "^13.0.0",
    "electron-builder": "^20.36.2",
    "electron-fetch": "^1.3.0",
    "eslint": "^5.9.0",
    "nconf": "^0.10.0",
    "node-notifier": "^8.0.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {}
}
